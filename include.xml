<xml>

    <pragma once="true" />

    <section if="linux">
        <include name="${haxelib:HxWebView}/internal/vendor/linux.xml"/>
    </section>

    <section if="windows">
        <include name="${haxelib:HxWebView}/internal/vendor/windows.xml"/>
    </section>

    <files id="haxe">
        <compilerflag value="-I${haxelib:HxWebView}/internal/webview" />
        <compilerflag value="-I${haxelib:HxWebView}" />
    </files>

    <files id="__main__">
        <compilerflag value="-I${haxelib:HxWebView}/internal/webview" />
        <compilerflag value="-I${haxelib:HxWebView}" />
    </files>

    <section if="windows">
            <assets path="internal/windows/x64/" rename="" unless="32"" />
            <assets path="internal/windows/x86" rename="" if="32" />
    </section>


</xml>
